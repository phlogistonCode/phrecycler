<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/prependData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prepend"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/appendData"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/appendData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="append"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/anyAddData"
        app:layout_constraintStart_toEndOf="@id/prependData" />

    <Button
        android:id="@+id/anyAddData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="any Add"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/replaceStart"
        app:layout_constraintStart_toEndOf="@id/appendData" />

    <Button
        android:id="@+id/replaceStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repl st"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/anyAddData" />

</androidx.constraintlayout.widget.ConstraintLayout>